<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<%= link_to "Log Out", destroy_user_session_path %> 


<div id="groups">
  <% @groups.each do |group| %>
    <% if group.icon.attached? %>
    <image class="icon-image" src="<%=(url_for(group.icon)) %>>
    <% end %>

    <%= render group %>
    <% myamt = 0 %>
    <% group.transactions.each do |transaction| %>
      <% myamt += transaction.amount %>
    <% end %>
    <p>Total Amount: <%= myamt  %></p>

    <p>
      <%= link_to "Show this group", group %>
    </p>
  <% end %>
</div>



<%= link_to "Add a new Category", new_group_path %>
